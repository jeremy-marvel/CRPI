&ACCESS R
&REL 6
&PARAM TEMPLATE = C:\KRC\Roboter\Template\FunctionVorgabe
&PARAM EDITMASK = *
DEFFCT REAL DECIMAL(VALUE:IN)
  REAL VALUE
  REAL RET_VAL
  INT INT_VAL

  INT_VAL = VALUE
  RET_VAL = VALUE - INT_VAL
  IF RET_VAL < 0.0 THEN
    RET_VAL = RET_VAL + 1.0
  ENDIF

  RETURN (RET_VAL)
ENDFCT