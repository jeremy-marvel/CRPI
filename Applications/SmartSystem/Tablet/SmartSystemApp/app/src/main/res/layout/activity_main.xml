<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18376A"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <!--SYSTEM SETTINS BAR -->
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#dfdfdf"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:padding="10dp"
                android:text="System Settings"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/robot_button"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_border"
                android:text="UR10: Offline"
                android:textSize="20sp" />

            <Button
                android:id="@+id/kinect_button"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_border"
                android:text="Kinect: Offline"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pebble_button"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_border"
                android:text="Pebble: Offline"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingBottom="20dp">

                <!--TCP DETAILS BAR -->
                <LinearLayout
                    android:layout_width="490dp"
                    android:layout_height="300dp"
                    android:background="#dfdfdf"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:padding="5dp"
                        android:text="@string/tcp_details"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">


                        <LinearLayout

                            android:layout_width="150dp"
                            android:layout_height="250dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/velocity"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/velocityunits"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="210dp"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:text="@string/xyz"
                                    android:textColor="#000000"
                                    android:textSize="20dp"></TextView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="-10dp"
                                    android:orientation="vertical">

                                    />

                                    <TextView
                                        android:id="@+id/tvSpeedX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="30dp"
                                        android:text="@string/velx"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvSpeedY"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/velx"
                                        android:textSize="20dp">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvSpeedZ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/velx"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="250dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/force_vector"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/forceunits"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="210dp"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:text="@string/xyz"
                                    android:textColor="#000000"
                                    android:textSize="20dp">

                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="-10dp"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvForceX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="30dp"
                                        android:text="@string/forcex"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvForceY"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/forcey"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvForceZ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/forcez"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="250dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/tool_vector"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/toolunits"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="210dp"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:text="@string/xyz"
                                    android:textColor="#000000"
                                    android:textSize="20dp">

                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="-10dp"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvToolX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="30dp"
                                        android:text="@string/toolx"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvToolY"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/tooly"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvToolZ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:text="@string/toolz"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </LinearLayout>

                <!--SURROUNDINGS BAR -->
                <LinearLayout
                    android:id="@+id/surroundings"
                    android:layout_width="500dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:background="#dfdfdf"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:padding="5dp"
                        android:text="@string/surroundings"
                        android:textColor="#ffffff"
                        android:textSize="20dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="-4dp"
                        android:orientation="horizontal">

                        <!--User group text box-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/user_group"
                            android:textColor="#000000"
                            android:textSize="30dp"></TextView>


                        <!--Dropdown menu to select user group-->
                        <Spinner
                            android:id="@+id/user_group_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="#dfdfdf"
                            android:dropDownVerticalOffset="-15dp"
                            android:entries="@array/user_groups"
                            android:padding="10dp"
                            android:prompt="@string/user_prompt"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <!-- Disturbance status box-->
                        <TextView
                            android:id="@+id/user_alert_box"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="#0686d4"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/no_disturbance"
                            android:textColor="#000000"
                            android:textSize="30dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--TASK SEQUENCE BAR -->
            <LinearLayout
                android:layout_width="1010dp"
                android:layout_height="360dp"
                android:layout_marginLeft="20dp"
                android:background="#dfdfdf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:padding="5dp"
                    android:text="@string/task_sequence"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="940dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="@string/current_step_time"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tvTimeCurrent"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/time"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="@string/time_elapsed"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tvTimeElapsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/time"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textSize="19dp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="108dp"
                        android:gravity="center"
                        android:text="@string/current"
                        android:textSize="19dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:text="@string/previous"
                        android:textSize="19dp" />


                </LinearLayout>


                <!-- task sequence bubbles -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tvNextTask"
                        android:layout_width="220dp"
                        android:layout_height="80dp"
                        android:background="@drawable/next_task"
                        android:gravity="center"
                        android:text="@string/lower_arm"
                        android:textSize="25dp" />


                    <TextView
                        android:id="@+id/tvCurrTask"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/current_task"
                        android:gravity="center"
                        android:text="@string/pick"
                        android:textSize="30dp" />


                    <TextView
                        android:id="@+id/tvPrevTask"
                        android:layout_width="220dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="90dp"
                        android:background="@drawable/previous_task"
                        android:gravity="center"
                        android:text="@string/raise_arm"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/timeline"
                    android:orientation="horizontal">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!--side navigation bar...swipe right from the left side. for fun -->
    </LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:entries="@array/navdrawer"
        android:textAlignment="center"></ListView>

</android.support.v4.widget.DrawerLayout>
